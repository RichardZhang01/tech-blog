<div class="display-flex align-content-center align-center justify-center row">
    <div class="col-sm-10 col-lg-8">
        <article class="card mx-3">
            <div class="card-header">
                <div class="flex-row justify-space-between">
                    <a href="/post/{{id}}">
                        {{title}}
                    </a>
                    <div class="">
                        Posted by {{user.username}} on {{format_date created_at}}
                    </div>
                </div>
            </div>
            <div class="card-body">  
                <div class="">
                    {{post_content}}
                </div>
            </div>
            <div class="card-footer">  
                {{comments.length}} {{format_plural 'comment' comments.length}}
            </div>
        </article>
    </div>
</div>